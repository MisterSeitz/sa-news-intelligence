{
    "actorSpecification": 1,
    "fields": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "title": "Headline"
            },
            "url": {
                "type": "string",
                "format": "uri",
                "title": "Article URL"
            },
            "source_feed": {
                "type": "string",
                "title": "Source"
            },
            "published": {
                "type": ["string", "null"],
                "format": "date-time",
                "title": "Date"
            },
            "ai_summary": {
                "type": "string",
                "title": "AI Insight",
                "description": "2-sentence executive summary."
            },
            "sentiment": {
                "type": ["string", "null"],
                "title": "Hype Rating",
                "description": "E.g., High Hype, Moderate Interest."
            },
            "category": {
                "type": ["string", "null"],
                "title": "Category",
                "description": "E.g., Game Review, Esports Results."
            },
            "key_entities": {
                "type": "array",
                "title": "Key Entities",
                "items": {
                    "type": "string"
                },
                "default": []
            },
            "method": {
                "type": "string",
                "enum": ["scraped", "search_fallback"],
                "description": "Traceability: Did we scrape the HTML or use Search API?"
            },
            "raw_context_source": {
                "type": ["string", "null"],
                "description": "Truncated raw text used for analysis (debugging)."
            }
        },
        "required": ["title", "url", "method", "ai_summary"]
    },
